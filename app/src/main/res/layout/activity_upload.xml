<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">
    <ImageView
        android:id="@+id/bearU"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/lineU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/usernameU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>


    <Button
        android:id="@+id/uploadU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="share"
        android:text="Share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />
    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineU"
        android:layout_marginTop="20dp">
        <Spinner
            android:layout_column="0"
            android:id="@+id/rhythms"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            />
        <Spinner
            android:layout_column="1"
            android:id="@+id/bpm"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            />
        <Spinner
            android:layout_column="2"
            android:id="@+id/instrument"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            />
    </GridLayout>
    <GridLayout
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GridLayout1"
        android:layout_marginTop="20dp"
        android:columnCount="6"
        android:rowCount="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whole"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/half"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quarter"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eighth"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sixteenth"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thirtysecond"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_margin="2dp"/>
    </GridLayout>
    <GridLayout
        android:id="@+id/shush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes"
        android:layout_marginTop="5dp"
        android:columnCount="6"
        android:rowCount="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wholesh"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/halfsh"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quartersh"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eighthsh"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sixteenthsh"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thirtysecondsh"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_margin="2dp"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>