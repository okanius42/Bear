<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <ImageView
        android:id="@+id/bearP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/lineP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/usernameP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoP"
        app:layout_constraintStart_toStartOf="@+id/profilePhotoP"/>

    <ImageView
        android:id="@+id/profilePhotoP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        app:layout_constraintTop_toBottomOf="@+id/bearP"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>